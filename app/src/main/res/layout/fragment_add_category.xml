<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_back"
            app:navigationIconTint="@color/white"
            app:title="Add Category"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Category Preview Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginVertical="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Category Preview"
                        android:textStyle="bold"
                        android:textAppearance="?attr/textAppearanceSubtitle1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical">

                        <FrameLayout
                            android:id="@+id/previewIconContainer"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="#FF5252"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/previewIconImage"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_food"
                                app:tint="@color/white" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/previewCategoryName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:textAppearance="?attr/textAppearanceSubtitle1"
                            android:textStyle="bold"
                            tools:text="Food" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginVertical="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/categoryNameLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Category Name">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/categoryNameInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Category Color"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/colorOptionsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <!-- Color options with selection indicator -->
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp">
                            
                            <View
                                android:id="@+id/color1"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/circle_shape"
                                android:backgroundTint="#FF5252" />
                            
                            <ImageView
                                android:id="@+id/color1Selected"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:padding="12dp"
                                android:visibility="visible"
                                app:srcCompat="@drawable/ic_check"
                                app:tint="@color/white" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp">
                            
                            <View
                                android:id="@+id/color2"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/circle_shape"
                                android:backgroundTint="#448AFF" />
                            
                            <ImageView
                                android:id="@+id/color2Selected"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:padding="12dp"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_check"
                                app:tint="@color/white" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp">
                            
                            <View
                                android:id="@+id/color3"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/circle_shape"
                                android:backgroundTint="#66BB6A" />
                            
                            <ImageView
                                android:id="@+id/color3Selected"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:padding="12dp"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_check"
                                app:tint="@color/white" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp">
                            
                            <View
                                android:id="@+id/color4"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/circle_shape"
                                android:backgroundTint="#FFC107" />
                            
                            <ImageView
                                android:id="@+id/color4Selected"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:padding="12dp"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_check"
                                app:tint="@color/white" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            
                            <View
                                android:id="@+id/color5"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/circle_shape"
                                android:backgroundTint="#9C27B0" />
                            
                            <ImageView
                                android:id="@+id/color5Selected"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:padding="12dp"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_check"
                                app:tint="@color/white" />
                        </FrameLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Category Icon"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textStyle="bold" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/iconOptionsLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Icon options with better styling -->
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp">
                                
                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/icon1Card"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="0dp"
                                    app:strokeWidth="2dp"
                                    app:strokeColor="@color/primary"
                                    android:clickable="true"
                                    android:focusable="true"
                                    app:cardBackgroundColor="#F5F5F5">
                                    
                                    <ImageView
                                        android:id="@+id/icon1"
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:layout_gravity="center"
                                        app:srcCompat="@drawable/ic_food"
                                        app:tint="@color/primary" />
                                </com.google.android.material.card.MaterialCardView>
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp">
                                
                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/icon2Card"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="0dp"
                                    app:strokeWidth="0dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    app:cardBackgroundColor="#F5F5F5">
                                    
                                    <ImageView
                                        android:id="@+id/icon2"
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:layout_gravity="center"
                                        app:srcCompat="@drawable/ic_shopping"
                                        app:tint="@color/grey" />
                                </com.google.android.material.card.MaterialCardView>
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp">
                                
                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/icon3Card"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="0dp"
                                    app:strokeWidth="0dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    app:cardBackgroundColor="#F5F5F5">
                                    
                                    <ImageView
                                        android:id="@+id/icon3"
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:layout_gravity="center"
                                        app:srcCompat="@drawable/ic_transport"
                                        app:tint="@color/grey" />
                                </com.google.android.material.card.MaterialCardView>
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp">
                                
                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/icon4Card"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="0dp"
                                    app:strokeWidth="0dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    app:cardBackgroundColor="#F5F5F5">
                                    
                                    <ImageView
                                        android:id="@+id/icon4"
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:layout_gravity="center"
                                        app:srcCompat="@drawable/ic_health"
                                        app:tint="@color/grey" />
                                </com.google.android.material.card.MaterialCardView>
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                
                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/icon5Card"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="0dp"
                                    app:strokeWidth="0dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    app:cardBackgroundColor="#F5F5F5">
                                    
                                    <ImageView
                                        android:id="@+id/icon5"
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:layout_gravity="center"
                                        app:srcCompat="@drawable/ic_entertainment"
                                        app:tint="@color/grey" />
                                </com.google.android.material.card.MaterialCardView>
                            </FrameLayout>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:text="Save Category"
                android:textAllCaps="false"
                app:cornerRadius="12dp"
                android:textSize="16sp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 